#!/usr/bin/env bash
set -e
if [[ ! -d "/home/fractal-tess/dev/tu-sofia/tu-pwa" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/fractal-tess/dev/tu-sofia/tu-pwa")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/fractal-tess/dev/tu-sofia/tu-pwa" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/fractal-tess/dev/tu-sofia/tu-pwa/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/fractal-tess/dev/tu-sofia/tu-pwa/.envrc" "/home/fractal-tess/dev/tu-sofia/tu-pwa/.direnv"/*.rc
