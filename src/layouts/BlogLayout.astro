---
import type { CollectionEntry } from 'astro:content';
import Navbar from '../components/Navbar.astro';
import UnsupportedSize from '../components/UnsupportedSize.astro';
import BaseHead from '../components/BaseHead.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, thumbnail, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body
    class="flex min-h-[100svh] flex-col text-foreground bg-[url('/background.png')] bg-fixed"
  >
    <main class="flex-1 flex flex-col md:hidden pb-16">
      <img transition:name={thumbnail} src={thumbnail} />
      <div
        class="w-[90svw] relative mx-auto -top-12 z-[999] frosted-glass rounded-md shadow-shadow flex items-center gap-4 flex-col px-2 py-4 animate-on-load"
      >
        <h1 class="font-bold text-3xl text-center">
          {title}
        </h1>
      </div>

      <article
        class="px-4 prose dark:prose-invert prose-p:indent-4 prose-strong:text-primary pb-8 prose-a:text-primary"
      >
        <slot />
      </article>
    </main>

    <UnsupportedSize />

    <Navbar />
  </body>
</html>

<style is:global>
  img[src*='#blue-bg'] {
    @apply bg-primary;
  }
  .animate-on-load {
    opacity: 0;
    transform: scale(0);
    animation: scaleAndFadeIn 1s forwards;
  }

  @keyframes scaleAndFadeIn {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>
