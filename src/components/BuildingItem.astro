---
import { Icon } from 'astro-icon/components';
import { ShareLocationButton } from './ShareLocationButton';

type Building = {
  label: string;
  description: string;
  googleMapsLink: string;
  qrCodeImageSrc: string;
};

const { label, description, googleMapsLink, qrCodeImageSrc } = Astro.props;
---

<li class="flex p-4 rounded-sm shadow items-center justify-between bg-white">
  <div class="flex flex-col gap-2">
    <h3 class="text-lg font-semibold">{label}</h3>
    <p class="text-gray-600 truncate">{description}</p>
  </div>
  <div class="flex gap-2">
    <ShareLocationButton
      _class="h-8 w-8"
      googleMapsLink={googleMapsLink}
      client:load
    />
    <a href={googleMapsLink} target="_blank" referrerpolicy="no-referrer">
      <Icon class="h-8 w-8" name="map-pin" />
    </a>
    <Icon class="h-8 w-8" name="qrcode" />
  </div>
</li>
